<!DOCTYPE html>
<html>
<head>
  <title>Linkshare</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body height="100%">
<h1><%= @share.link.title %></h1>
  <%= form_for @share do |s| %>
  <div class="row">
    <div id="ls_logo" class="small-1 large-1 columns">Logo</div>
    <div id="groups" class="small-4 large-4 columns">Groups</div>
    <div id="link_info" class="small-5 large-5 columns">
      <%= s.hidden_field :network_id, value:1%>
      <%= s.fields_for :link do |l| %>
        <%= l.hidden_field :url,value: @share.link.url %>
        <%= @share.link.title %><br />
        <%= @share.link.description %>
      <% end %>
    </div>
    <div id="share" class="small-2 large-2 columns"><%= submit_tag %></div>
  </div>
  <% end %>
</body>
</html>

