  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body height="100%">

<div class="row">
  <div id="ls_logo" class="small-1 large-1 columns">Logo</div>
  <div id="groups" class="small-4 large-4 columns">Groups</div>
  <div id="link_info" class="small-5 large-5 columns"><%= @link.title %></div>
  <div id="share" class="small-2 large-2 columns">Share button</div>
</div>

</body>
</html>

