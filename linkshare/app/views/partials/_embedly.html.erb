<%= link_to link.url do %>
  <div class="small-10 large-10 columns link_content">
    <div class='small-4 large-4 columns'>
      <%= image_tag link.img_url %>
    </div>
    <div class="small-8 large-8 columns">
      <div class="row">
        <h3><%= link.title %><h3>
        <h4>Description: <%= link.description %></h4>
      </div>
    </div>
  </div>
<%end%>


